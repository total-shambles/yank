{
  "manifest_version": 3,
  "name": "Yank",
  "version": "2.0",
  "description": "Search query optimizer",
  "permissions": ["tabs", "scripting", "notifications", "storage"],
  "host_permissions": ["<all_urls>", "http://localhost:11434/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Query Optimizer"
  },
  "icons": {
    "16": "image.png",
    "32": "image.png",
    "64": "image.png",
    "128": "image.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}